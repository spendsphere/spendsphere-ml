{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "advice": {
      "type": "array",
      "minItems": 3,
      "maxItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["High", "Medium", "Low"]
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["id", "title", "priority", "description"],
        "additionalProperties": false
      }
    }
  },
  "required": ["advice"],
  "additionalProperties": false
}
