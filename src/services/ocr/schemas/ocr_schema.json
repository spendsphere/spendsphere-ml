{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "Price": {
            "type": "number"
          },
          "Description": {
            "type": "string"
          },
          "TransactionDate": {
            "oneOf": [
              {
                "type": "string",
                "format": "date"
              },
              {
                "type": "string",
                "enum": ["N/A"]
              }
            ],
            "description": "Дата транзакции в формате YYYY-MM-DD или 'N/A', если определить невозможно"
          },
          "TransactionType": {
            "type": "string",
            "enum": ["income", "expense"],
            "description": "Тип транзакции: доход (income) или расход (expense)"
          }
        },
        "required": ["Name", "Price", "Description", "TransactionDate", "Type", "TransactionType"],
        "additionalProperties": false
      }
    }
  },
  "required": ["items"]
}
